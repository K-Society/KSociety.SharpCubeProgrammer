<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <NuspecFile>$(MSBuildThisFileName).nuspec</NuspecFile>
    <NuspecBasePath>$(PublishDir)</NuspecBasePath>
    <Platforms>AnyCPU;x64</Platforms>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="KSociety.Wmi" Version="0.0.8" />
  </ItemGroup>

  <Target Name="PrePack" BeforeTargets="GenerateNuspec" DependsOnTargets="GetBuildVersion">
    <PropertyGroup>
      <NuspecProperties>version=$(BuildVersion3Components)</NuspecProperties>
    </PropertyGroup>
  </Target>

</Project>
