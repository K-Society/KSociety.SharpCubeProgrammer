  <Target Name="CopyStFlashLoaderFiles" AfterTargets="Build" Inputs="@(StFlashLoaderFiles)" Outputs="$(TargetDir)\st\Programmer\FlashLoader">
    <Copy SourceFiles="@(StFlashLoaderFiles)" DestinationFolder="$(TargetDir)\st\Programmer\FlashLoader" />
  </Target>
  <Target Name="CopyStExternalLoaderFiles" AfterTargets="Build" Inputs="@(StExternalLoaderFiles)" Outputs="$(TargetDir)\st\Programmer\ExternalLoader">
    <Copy SourceFiles="@(StExternalLoaderFiles)" DestinationFolder="$(TargetDir)\st\Programmer\ExternalLoader" />
  </Target>
  <Target Name="CopyStDataBaseFiles" AfterTargets="Build" Inputs="@(StDataBaseFiles)" Outputs="$(TargetDir)\st\Data_Base">
    <Copy SourceFiles="@(StDataBaseFiles)" DestinationFolder="$(TargetDir)\st\Data_Base" />
  </Target>

