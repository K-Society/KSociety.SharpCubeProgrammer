<Project ToolsVersion="Current" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <ItemGroup Condition=" $([System.OperatingSystem]::IsWindows()) AND ('$(Platform)' == 'x86' OR '$(Platform)' == 'AnyCPU') ">
    <Content Include="$(MSBuildThisFileDirectory)win-x86\native\Programmer\*.dll">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      <Link>dll\x86\%(FileName)%(Extension)</Link>
      <Visible>false</Visible>
    </Content>
    <Content Include="$(MSBuildThisFileDirectory)native\Programmer\version">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      <Link>dll\x86\version</Link>
      <Visible>false</Visible>
    </Content>
    <Content Include="$(MSBuildThisFileDirectory)win-x86\native\STLinkUSBDriver.dll">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      <Link>dll\x86\STLinkUSBDriver.dll</Link>
      <Visible>false</Visible>
    </Content>
  </ItemGroup>
  <ItemGroup Condition=" $([System.OperatingSystem]::IsWindows()) AND ('$(Platform)' == 'x64' OR '$(Platform)' == 'AnyCPU') ">
    <Content Include="$(MSBuildThisFileDirectory)win-x64\native\Programmer\*.dll">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      <Link>dll\x64\%(FileName)%(Extension)</Link>
      <Visible>false</Visible>
    </Content>
    <Content Include="$(MSBuildThisFileDirectory)native\Programmer\version">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      <Link>dll\x64\version</Link>
      <Visible>false</Visible>
    </Content>
    <Content Include="$(MSBuildThisFileDirectory)win-x64\native\STLinkUSBDriver.dll">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      <Link>dll\x64\STLinkUSBDriver.dll</Link>
      <Visible>false</Visible>
    </Content>
  </ItemGroup>
  <ItemGroup Condition=" $([System.OperatingSystem]::IsLinux()) AND ('$(Platform)' == 'x64' OR '$(Platform)' == 'AnyCPU') ">
    <Content Include="$(MSBuildThisFileDirectory)linux-x64\native\Programmer\*.*">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      <Link>so\lib\%(FileName)%(Extension)</Link>
      <Visible>false</Visible>
    </Content>
    <Content Include="$(MSBuildThisFileDirectory)native\Programmer\version">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      <Link>so\lib\version</Link>
      <Visible>false</Visible>
    </Content>
    <Content Include="$(MSBuildThisFileDirectory)linux-x64\native\libSTLinkUSBDriver.so">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      <Link>so\lib\libSTLinkUSBDriver.so</Link>
      <Visible>false</Visible>
    </Content>
  </ItemGroup>
  <ItemGroup>
    <None Update="@(None)">
      <Visible Condition="'%(NuGetItemType)' == 'None' and '%(NuGetPackageId)' == 'KSociety.SharpCubeProgrammer'">False</Visible>
    </None>
  </ItemGroup>
</Project>
